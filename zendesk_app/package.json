{
  "name": "react_js-template",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "dev": "vite --port 3000",
    "watch": "vite build --watch --mode development",
    "build:dev": "vite build --mode development",
    "build": "vite build --mode production && cp manifest.json dist && cp zcli.apps.config.json dist",
    "lint": "eslint . --ext js,jsx --max-warnings 0",
    "start": "zcli apps:server src",
    "start:prod": "zcli apps:server dist",
    "switch:dev": "node scripts/toggle-env.js dev",
    "switch:prod": "node scripts/toggle-env.js prod",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-tooltip": "^1.2.6",
    "@zendeskgarden/css-bedrock": "^9.1.1",
    "@zendeskgarden/react-buttons": "^8.76.3",
    "@zendeskgarden/react-grid": "^8.76.3",
    "@zendeskgarden/react-theming": "^8.76.3",
    "@zendeskgarden/react-typography": "^8.76.3",
    "framer-motion": "^12.12.1",
    "marked": "^15.0.7",
    "posthog-js": "^1.255.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.1.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.12",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.3.2",
    "husky": "^9.1.7",
    "jsdom": "^24.1.0",
    "prettier": "^3.2.5",
    "sass": "^1.83.4",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ]
  }
}
